[Unit]
Description=infodisp daemon
After=local-fs.target network.target

[Service]
Type=simple
User=root
ExecStart=/opt/infodisp/infodisp.sh
ExecStop=/opt/infodisp/infodisp-shutdown.sh
Restart=on-abort

[Install]
WantedBy=multi-user.target
